<div class="contents_row">
<span class="name">
      <a href="/users/<%= @post.user.id %>">
        <%= @post.user.nickname %>
      </a>
    </span>
  <% if user_signed_in? && current_user.id == @post.user_id %>
    <div class="more">
    
    </div>
     <% end %>
     <div class ="post_all">
        <p class ="post_title"><%= @post.title%></p>
        <p class ="post_text"><%= @post.text %></p>
        <span class="task-time"><%= @post.created_at.strftime("%Y-%m-%d %H:%M") %></span>
     </div>
   
    
     
     <div id="favorites_buttons_<%= @post.id %>">
         <%= render partial: 'favorites/favorite', locals: { post: @post} %>
    </div>
    
  </div>
  <div class="container1">
    <div class="comments">
     <div class="row">
        <ul>
            <li class="comment-create">
                <h3 class="text-left title">レビュー</h3>
            </li>
            <li id="comments_area">
                <%= render partial: 'comments/index', locals: { comments: @comments } %>
            </li>
        </ul>
    <hr>
      <% if user_signed_in? %>
          <div class="comment-create">
              <h3 class="text-left">レビューを投稿する</h3>
              <%= render partial: 'comments/form', locals: { comment: @comment, post: @post } %>
          </div>
      <% end %>
</div>
      
      
    </div>
  </div>
</div>
<div class="underlay-photo"></div>
<div class="underlay-black"></div>
